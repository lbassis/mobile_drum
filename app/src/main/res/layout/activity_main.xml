<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.sequenciador.MainActivity">

    <Spinner
        android:id="@+id/spinner0"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"/>

    <ImageButton
        android:id="@+id/record_0"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/record_button"
        android:backgroundTint="@color/white"/>

    <SeekBar
        android:id="@+id/seek_0"
        android:layout_width="300dp"
        android:layout_height="29dp"
        android:layout_alignTop="@id/record_0"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:max="50"
        android:progress="0" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/record_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/record_button"
        android:backgroundTint="@color/white"
        />

    <SeekBar
        android:id="@+id/seek_1"
        android:layout_width="300dp"
        android:layout_height="29dp"
        android:layout_alignTop="@id/record_0"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="80dp"
        android:max="50"
        android:progress="0"
        />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="650dp"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"
        android:src="@drawable/play_button_disabled"
        android:textSize="20sp" />
    <ImageButton
        android:id="@+id/add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/seek_1"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"
        android:src="@drawable/add_button"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exportar"
        android:layout_marginTop="658dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>

</RelativeLayout>